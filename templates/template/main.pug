block vars
	-
		let
			lang = 'ru',
			page_title = '',
			fancy = '',
			slick = false,
			greensock = false;
		const
			site_name = 'Sample';
include ../../../../../core/mixins/mixins
include ../data/data
doctype html
html(lang!=lang)
	head
		meta(charset='utf-8')
		meta(name="viewport" content="width=device-width,user-scalable=no, initial-scale=1.0,maximum-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title #{site_name} - #{page_title}
		- if(fancy)
			+inc('css','css/jquery.fancybox.css')
		- if(slick)
			+inc('css','css/css_js/slick.css')
		+inc('css','css/main.css')
	body
		.set
			block header.roof
				header.head-row
					.section
						.bricks.head-line
							.m10.t3.d2
								.head-logo
									a(href='#') LW
										span Learn Words
							.m2.t9.d10
								nav.head-menu
										a(href='#') Словарь
								button.head-btn
									span
									span
									span
			block main
				block aside
				block content
			block footer.ground
				- if(fancy || slick)
					+inc('js','js/jquery-3.3.1.min.js')
				- if(fancy)
					+inc('js','js/jquery.fancybox.min.js')
				- if(slick)
						+inc('js','js/slick.js')
				- if(greensock)
						+inc('js','js/greensock.js')
				+inc('js','js/main.js',true)
				+inc('js','js/fiction.js',true)
			//	+inc('js','js/main.js',true)
